@model IEnumerable<WebApplication8.Models.Orders>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<h2>Список книг</h2>

<p class="w-100 btn">
    @Html.ActionLink("Добавить книгу", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название
            @*@Html.DisplayNameFor(model => model.name)*@
        </th>
        <th>
            Цена
            @*@Html.DisplayNameFor(model => model.cost)*@
        </th>
        <th>
            Колличество
            @*@Html.DisplayNameFor(model => model.amount)*@
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_order }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_order }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_order })
        </td>
    </tr>
}

</table>
