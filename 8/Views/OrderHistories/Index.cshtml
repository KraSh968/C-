@model  IEnumerable<IGrouping<string,WebApplication8.Models.OrderHistories>>

@{
    ViewBag.Title = "Index";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>


<table class="table">
    <thead>
        <tr>
            <th>
                Почта
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var groop in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(a => groop.Key)
            </td>
            <td>
                @foreach (var order in groop)
                {
                    <dt class="col-sm-2">
                        Название
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(a => order.name)
                    </dd>
                    <dt class="col-sm-2">
                        Количество
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(a => order.amount)
                    </dd>
                }
            </td>
        </tr>
                }
        </tbody>
</table>
