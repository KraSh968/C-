@model prak5MVC.Models.Calculate


@{
    ViewBag.Title = "AllMethods";
}

<html>

<head>

    <style>
        #res {
            width: 400px; /* Ширина поля в пикселах */
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>



<body>

    <h2>Calculate</h2>

    <div>

        @using (Html.BeginForm("AllMethods", "Math", FormMethod.Post))
        {

            <div>
                <label>Первая цифра</label>
                <br />
                <input class="form-control" type="text" step="any" id="number1" name="number1" value="@Model.number1" />
            </div>

            <div>
                <label>Вторая цифра</label>
                <br />
                <input class="form-control" type="text" step="any" id="number2" name="number2" value="@Model.number2" />
            </div>

            <div>
                <label>Результат</label>
                <br />
                <input class="form-control" type="text" id="result" name="result" value="@Model.result" />
                <input class="form-control" type="text" name="res" id="res" value="@Model.error" />
            </div>

            <button class="btn btn-primary mt-4" type="submit" id="sum" value="sum" name="calc">+</button>
            <button class="btn btn-primary mt-4" type="submit" id="min" value="min" name="calc">-</button>
            <button class="btn btn-primary mt-4" type="submit" id="mult" value="mult" name="calc">*</button>
            <button class="btn btn-primary mt-4" type="submit" id="div" value="div" name="calc">/</button>




        }

    </div>



</body>

</html>




