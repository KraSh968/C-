@model IEnumerable<prak5MVC.Models.Customers>

@{
    ViewBag.Title = "Index";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orders.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.phoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.orders.Name)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id_customers }, htmlAttributes: new { @class = "btn btn-primary mt-4" })
        @Html.ActionLink("Details", "Details", new { id = item.Id_customers }, htmlAttributes: new { @class = "btn btn-primary mt-4" })
        @Html.ActionLink("Delete", "Delete", new { id = item.Id_customers }, htmlAttributes: new { @class = "btn btn-primary mt-4" })
    </td>
</tr>
}

</table>
